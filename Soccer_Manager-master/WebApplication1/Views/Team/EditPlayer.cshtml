@model DAL.Model_Classes.Player

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Player</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditPlayer">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="PlayerId" value="@Model.PlayerId" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <div><span asp-validation-for="Name" class="text-danger"></span></div>
                <input asp-for="Name" class="form-control" value="@Model.Name" />
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label"></label>
                <div><span asp-validation-for="Surname" class="text-danger"></span></div>
                <input asp-for="Surname" class="form-control" value="@Model.Surname" />
            </div>
            <div class="form-group">
                <label asp-for="Position" class="control-label"></label>
                <div><span asp-validation-for="Position" class="text-danger"></span></div>
                <input asp-for="Position" class="form-control" value="@Model.Position" />
            </div>
            <div class="form-group">
                <label asp-for="Born" class="control-label"></label>
                <div><span asp-validation-for="Born" class="text-danger"></span></div>
                <input asp-for="Born" type="date" class="form-control" value="@string.Format("{0:yyyy-MM-dd}", Model.Born)" />
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
                <a class="btn btn-default" asp-action="Index">Cancel</a>
            </div>
        </form>
    </div>
</div>