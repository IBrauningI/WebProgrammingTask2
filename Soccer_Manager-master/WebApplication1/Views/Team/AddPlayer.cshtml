@model DAL.Model_Classes.Player

@{
    ViewData["Title"] = "Create";
}


<div style="margin-left: 100px;">

    <h2>Create</h2>

    <h4>Player</h4>
    <hr />
    <div class="row">
        <div class="col-md-4" style="margin-left: 5em;">
            <form asp-action="AddPlayer">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <div><span asp-validation-for="Name" class="text-danger"></span></div>
                    <input asp-for="Name" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Surname" class="control-label"></label>
                    <div><span asp-validation-for="Surname" class="text-danger"></span></div>
                    <input asp-for="Surname" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Position" class="control-label"></label>
                    <div><span asp-validation-for="Position" class="text-danger"></span></div>
                    <input asp-for="Position" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Born" class="control-label"></label>
                    <div><span asp-validation-for="Born" class="text-danger"></span></div>
                    <input type="date" asp-for="Born" class="form-control" />
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                    <a class="btn btn-default" asp-action="Index">Cancel</a>
                </div>
            </form>

        </div>
    </div>


</div>